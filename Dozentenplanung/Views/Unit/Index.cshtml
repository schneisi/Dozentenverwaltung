@model IEnumerable<Dozentenplanung.Models.Unit>;
@{
    ViewData["title"] = "Units";
    ViewData["menuId"] = "units";
}
<form id="form" asp-action="index" asp-controller="Unit" method="get">
    <div class="columns">
        <div class="column">
            <div class="field">
                <label class="label">Bezeichnung</label>
                <div class="control">
                    <input name="designation" class="input" type="text" placeholder="Unit Code" value=@ViewBag.Designation>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="field">
                <label class="label">Titel</label>
                <div class="control">
                    <input name="title" class="input" type="text" placeholder="Titel der Unit" value=@ViewBag.UnitTitle>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="field">
                <label class="label">Semester</label>
                <div class="control">
                    <input name="semester" class="input" type="number" placeholder="Semester" value=@ViewBag.Semester>
                </div>
            </div>
        </div>
    </div>
    <div class="columns">
        <div class="column">
            <div class="field">
                <label class="label">Jahr</label>
                <div class="control">
                    <input name="year" class="input" type="text" placeholder="Jahr der Unit" value=@ViewBag.Year>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="field">
                <label class="label">Quartal</label>
                <div class="control">
                    <input name="quarter" class="input" type="number" placeholder="Quartal der Unit" value=@ViewBag.Quarter>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="field">
                <label class="label">Status</label>
                <div class="control">
                    <div class="select">
                        <select name="status">
                            <option value="-1" >Alle</option>
                            <option value="0">Offen</option>
                            <option value="1">Angefragt</option>
                            <option value="2">Bestätigt</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="field">
                <label class="label">Dozent</label>
                <div class="control">
                    <div class="select">
                        <select name="lecturerId" asp-items="@ViewBag.Lecturers"></select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="button" form="form">Suchen</button>
    <button type="submit" asp-action="UnitReport" asp-controller="report" class="button" form="form">Suchen</button>
</form>

<table class="table is-fullwidth is-hoverable is-striped">
    <thead>
        <tr>
            <th>Status</th>
            <th>Bezeichnung</th>
            <th>Name</th>
            <th>Semester</th>
            <th>Jahr</th>
            <th>Quartal</th>
            <th>Prüfungsart</th>
            <th>Prüfungsdauer</th>
            <th>Dozent</th>
            <th />
        </tr>
    </thead>
    @foreach (var eachUnit in Model) {
        <tr>
            <td>
                <img src=@eachUnit.StatusIconString() />
            </td>
            <td onclick="location.href = '@(Url.Action("unit", "unit", new { id = eachUnit.Id }))'">
                @Html.DisplayFor(modelItem => eachUnit.Designation)
            </td>
            <td onclick="location.href = '@(Url.Action("unit", "unit", new { id = eachUnit.Id }))'">
                @Html.DisplayFor(modelItem => eachUnit.Title)
            </td>
            <td onclick="location.href = '@(Url.Action("unit", "unit", new { id = eachUnit.Id }))'">
                @Html.DisplayFor(modelItem => eachUnit.Semester)
            </td>
            <td onclick="location.href = '@(Url.Action("unit", "unit", new { id = eachUnit.Id }))'">
                @Html.DisplayFor(modelItem => eachUnit.Year)
            </td>
            <td onclick="location.href = '@(Url.Action("unit", "unit", new { id = eachUnit.Id }))'">
                @Html.DisplayFor(modelItem => eachUnit.Quarter)
            </td>
            <td onclick="location.href = '@(Url.Action("unit", "unit", new { id = eachUnit.Id }))'">
                @Html.DisplayFor(modelItem => eachUnit.ExamType)
            </td>
            <td onclick="location.href = '@(Url.Action("unit", "unit", new { id = eachUnit.Id }))'">
                @Html.DisplayFor(modelItem => eachUnit.DurationOfExam)
            </td>
            <td onclick="location.href = '@(Url.Action("unit", "unit", new { id = eachUnit.Id }))'">
                @Html.DisplayFor(modelItem => eachUnit.Lecturer.Fullname)
            </td>
            <td>
                <a class="button" asp-controller="unit" asp-action="edit" asp-route-id="@eachUnit.Id">Bearbeiten</a>
            </td>
        </tr>
    }
</table>
