<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["title"] - Dozentenplanung</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.2/css/bulma.min.css" rel="stylesheet" />
        <script defer src="https://use.fontawesome.com/releases/v5.0.10/js/all.js" integrity="sha384-slN8GvtUJGnv6ca26v8EzVaR9DC58QEwsIk9q1QXdCU8Yu8ck/tL/5szYlBbqmS+" crossorigin="anonymous"></script>
        <link href="/css/app.css" rel="stylesheet" />
        <meta charset="UTF-8" />
    </head>
    <body>
        <div class="sidenav">
            <aside class="menu">
                <p class="menu-label">
                    Dozenten
                </p>
                <ul class="menu-list">
                    <li><a id="lecturers" asp-controller="lecturer" asp-action="index">Dozenten</a></li>
                </ul>
                <p class="menu-label">
                    Vorlesung
                </p>
                <ul class="menu-list">
                    <li><a id="courses" asp-controller="course" asp-action="index">Kurse</a></li>
                    <li>
                        <ul>
                            <li><a id="modules" asp-controller="Module" asp-action="Index">Module</a></li>
                            <li><a id="units" asp-controller="Unit" asp-action="Index">Units</a></li>
                        </ul>
                    </li>
                </ul>
                <p class="menu-label">
                    Entwicklung
                </p>
                <ul class="menu-list">
                    <li><a id="dev" asp-controller="dev" asp-action="index">Entwicklung</a></li>
                </ul>

            </aside>
        </div>

        <div class="main">
            <div id="contentContainer">
                <h2 class="title is-h2">@ViewData["title"]</h2>
                @RenderBody()
            </div>
        </div>
        <script>
            $(@ViewData["menuId"]).addClass("is-active");
        </script>
        @RenderSection("script", false)
    </body>
</html>
