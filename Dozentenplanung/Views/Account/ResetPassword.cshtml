@{
    ViewData["title"] = "Passwort zurücksetzen - Dozentenplanung";
}


<div class="hero-body">
    <div class="container has-text-centered">
        <div class="column is-6 is-offset-3">
            <h3 class="title has-text-grey">Passwort zurücksetzen</h3>
            <div class="box">
                <figure class="avatar">
                    <img src="https://placehold.it/128x128">
                </figure>
                <form asp-controller="account" asp-action="createpasswordtoken">
                    <div class="field">
                        <div class="control">
                            <input class="input" name="email" type="text" placeholder="E-Mail" autofocus="">
                        </div>
                    </div>
                    <button type="submit" class="button is-block is-info is-fullwidth">Zurücksetzen</button>
                </form>
            </div>
            <a asp-controller="dev" asp-action="index">Dev-Seite</a>
        </div>
    </div>
</div>
